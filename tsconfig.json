{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitThis": false,
        "typeRoots": [
            "./src"
        ],
        "types": ["node"]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}